{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Sign In
                </div>
                <div class="panel-body">
                    {# route for setName #}
                    <form action="{{ path_for('auth.sign-in') }}" method="post" autocomplete="off">

                        <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email"
                                   placeholder="frame@outlook.com"
                                   class="form-control"
                                   value="{{ oldInput.email }}">

                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>


                        <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                            <label for="password">password:</label>
                            <input type="password"
                                   name="password" id="password"
                                   placeholder="password"
                                   class="form-control" value="{{ oldInput.password }}">

                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>

                        <button type="submit" class="btn btn-class">Sign In</button>

                        {# csrf field #}

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}