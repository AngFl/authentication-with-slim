{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Sign Up
                </div>
                <div class="panel-body">
                    {# route for setName #}
                    <form action="{{ path_for('auth.sign-up') }}" method="post" autocomplete="off">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" placeholder="frame@outlook.com" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="username">Name:</label>
                            <input type="text" name="username" id="username" placeholder="username" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="password">password:</label>
                            <input type="password" name="password" id="password" placeholder="password" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-class">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}